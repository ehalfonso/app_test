<%- include('partials/head') %> 

<%- include('partials/navigation') %> 


<div class="container my-4">
    <div class="row">
        <!--columna izquierda-->
        <div class="col-12 col-md-7 col-lg-8">
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <td class="text-center">Nombre</td>
                            <td class="text-center">Apellido</td>
                            <td class="text-center">Email</td>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                        <% users.forEach( function(user){%> 
                        <tr>
                            <td class="text-center"><%= user.nombre %> </td>
                            <td class="text-center"><%= user.apellido %> </td>
                            <td class="text-center"><%= user.email %> </td>
                        </tr>
                        <%}) %>
                        
                    </tbody>
                </table>
                <div id="mensaje" class="card my-5">
                    <div class="card-body">
                        <h3>Mensajes</h3>
                        <% users.forEach(function(user){%>
                            <div>
                                <h6><%= user.nombre %></h6>
                                <p><%= user.mensaje %></p>
                            </div>
                        
                        <%}) %> 
                    </div>
                </div>
            </div>
        </div>
        <!--columna derecha-->
        <div class="col-12 col-md-5 col-lg-4">
            <form action="/user" method="POST" class="card card-body">
                <div class="form-group">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Entre su Nombre" class="form-control" autofocus>
                </div>
                <div class="form-groug">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" id="apellido" name="apellido" placeholder="Entre su Apellido" class="form-control">
                </div>
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" id="email" name="email" placeholder="Entre su Email" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <label for="mensaje" class="form-label">Mensaje</label>
                    <textarea name="mensaje" id="mensaje"  rows="3" class="form-control"></textarea>
                </div>
                <input type="submit" value="Enviar"class="btn btn-dark">
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') %> 
    
